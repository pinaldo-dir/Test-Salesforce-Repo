<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Status__c</field>
        <field>CreatedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Pending_Analyst_Approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>Division Approval</label>
        <name>Division_Approval</name>
        <rejectionActions>
            <action>
                <name>Division_Reject</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>HR_Form_1_Reject_Alert</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Pending_Manager_Approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <description>HR Analyst reviews/edits and approves before sending out request for approval to Manager.</description>
        <entryCriteria>
            <formula>NOT($Permission.HR_Division_Form_1_PS)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>HR_Analyst Edit and Approval</label>
        <name>HR_Analyst_Edit_and_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>HR_Form_1_Reject_Alert</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Rejected_by_HR_Analyst</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <description>This is the final approval, if the record needs Chief approval, Manager can reassign the record to Chief.</description>
        <entryCriteria>
            <formula>NOT($Permission.HR_Division_Form_1_PS)</formula>
        </entryCriteria>
        <label>HR Manager Final Approval</label>
        <name>HR_Manager_Final_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Form 1 created by Division</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>($Permission.HR_Division_Form_1_PS || $Profile.Name = &quot;HR Division User&quot;) &amp;&amp; NOT( ISPICKVAL(Status__c, &quot;Approval&quot;))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Form_1_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>HR_Form_1_Final_Approval_Notice_Alert</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>HR_Form_1_Reject_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>HR_Manager_Reject</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Pending_Division_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Form 1 Approval Division V2</label>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
