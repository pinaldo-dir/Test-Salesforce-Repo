<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>BOFE</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>DLSE</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Case__c</field>
        <field>Case_Number__c</field>
        <field>Meeting_Start_Date_Time__c</field>
        <field>Meeting_End_Date_Time__c</field>
        <field>Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Sr_Case_Deputy__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>User.Title</field>
                <operation>notEqual</operation>
                <value>Senior Deputy Labor Commissioner</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Approve Meeting</label>
        <name>Approve_Meeting</name>
    </approvalStep>
    <description>Referral to bofe senior for hearing approval</description>
    <emailTemplate>BOFE_Email_Templates/BOFE_Hearing_Referral</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Hearing__c.RecordType</field>
            <operation>equals</operation>
            <value>BOFE Hearing</value>
        </criteriaItems>
        <criteriaItems>
            <field>Hearing__c.Status__c</field>
            <operation>equals</operation>
            <value>New</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>BOFE_Hearing_Referral_Approved_Email_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Hearing_Approved_by_Sr</name>
            <type>Task</type>
        </action>
        <action>
            <name>Update_Meeting_Status_Meeting_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>BOFE_Hearing_Referral_Rejected_Email_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Meeting_Status_Meeting_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Hearing_Approval_Workfloinitiated</name>
            <type>Task</type>
        </action>
        <action>
            <name>Update_Meeting_Status_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>BOFE Hearing Referral</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
