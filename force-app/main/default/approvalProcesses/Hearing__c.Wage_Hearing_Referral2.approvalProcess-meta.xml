<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>WCA</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Case__c</field>
        <field>Case_Number__c</field>
        <field>Meeting_Start_Date_Time__c</field>
        <field>Meeting_End_Date_Time__c</field>
        <field>Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Sr_Case_Deputy__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approve Meeting</label>
        <name>Approve_Meeting</name>
    </approvalStep>
    <emailTemplate>WCA_Email_Templates/Wage_Hearing_Referral_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Hearing__c.RecordType</field>
            <operation>equals</operation>
            <value>WCA Hearing,Garment Hearing,Garment Revocation Hearing</value>
        </criteriaItems>
        <criteriaItems>
            <field>Hearing__c.Status__c</field>
            <operation>equals</operation>
            <value>New</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Hearing_Approved_by_Sr</name>
            <type>Task</type>
        </action>
        <action>
            <name>Update_Meeting_Status_Meeting_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Wage_Hearing_Referral_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Update_Meeting_Status_Meeting_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Wage_Hearing_Referral_Rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Hearing_Approval_Workfloinitiated</name>
            <type>Task</type>
        </action>
        <action>
            <name>Update_Meeting_Status_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Wage Hearing Referral</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Update_status_to_New</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
