<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>BOFE_Admin</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>BOFE_Deputies</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>BOFE_Senior_Deputies</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>L_R_File_Number__c</field>
        <field>Case__c</field>
        <field>Assigned_Deputy__c</field>
        <field>Assigned_Senior_Deputy__c</field>
        <field>Legal_Entity__c</field>
        <field>Type_of_Request__c</field>
        <field>Other_Inspection_Type__c</field>
        <field>Requesting_Party_User__c</field>
        <field>Completion_Date__c</field>
        <field>Due_Date__c</field>
        <field>Status__c</field>
        <field>Notes__c</field>
        <field>Recommendations__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Inspection_Request_Recommendation_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Recomendation_Approved_True</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Used for the Senior Deputies to Approve Recommendations</description>
        <label>Senior Deputy Approval</label>
        <name>Senior_Deputy_Approval</name>
        <rejectionActions>
            <action>
                <name>Inspection_Request_Recommendation_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Sends the Inspection Request to the Senior Deputy to approve Recommendations by the Deputy</description>
    <emailTemplate>Case_Management_Email_Templates/Inspection_Request_Approval_Needed</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Inspection_Request__c.Recommendations__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Approve Recommendations</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
