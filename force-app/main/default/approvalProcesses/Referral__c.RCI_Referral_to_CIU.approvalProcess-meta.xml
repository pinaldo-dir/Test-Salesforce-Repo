<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>System_Administrators</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>RecordType</field>
        <field>Referring_Deputy__c</field>
        <field>Case__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Sr Deputy Approval</label>
        <name>Sr_Deputy_Approval</name>
    </approvalStep>
    <description>Criminal Investigation Unit</description>
    <emailTemplate>Referral_Email_Templates/RCI_Referral_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>DIR_Case__c.Closed__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>DIR_Case__c.RecordType</field>
            <operation>equals</operation>
            <value>RCI</value>
        </criteriaItems>
        <criteriaItems>
            <field>Referral__c.RecordType</field>
            <operation>equals</operation>
            <value>RCI Referral to CIU</value>
        </criteriaItems>
        <criteriaItems>
            <field>Referral__c.Request_Status__c</field>
            <operation>notEqual</operation>
            <value>Closed</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>RCI_Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Approval_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Clear_Rejected_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Referral_Approved</name>
            <type>Task</type>
        </action>
        <action>
            <name>RCI_Referral_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>RCI_Approval_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Clear_Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Referral_Rejected</name>
            <type>Task</type>
        </action>
        <action>
            <name>RCI_Referral_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Rejected_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>RCI_Approval_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>RCI Referral to CIU</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>5</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
