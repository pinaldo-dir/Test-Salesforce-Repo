<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>System_Administrators</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>RecordType</field>
        <field>Referring_Deputy__c</field>
        <field>Judgement__c</field>
        <field>Judgement_Settlement_Total_Amount__c</field>
        <field>Judgment_Amount_Collected__c</field>
        <field>Judgment_Amount_Due__c</field>
        <field>Case__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Referral__c.Request_Status__c</field>
                <operation>notEqual</operation>
                <value>Closed</value>
            </criteriaItems>
            <criteriaItems>
                <field>Referral__c.RecordType</field>
                <operation>equals</operation>
                <value>RCI Referral to JEU</value>
            </criteriaItems>
            <criteriaItems>
                <field>User.Title</field>
                <operation>notEqual</operation>
                <value>Attorney</value>
            </criteriaItems>
            <criteriaItems>
                <field>User.Title</field>
                <operation>notEqual</operation>
                <value>Senior Deputy</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Sr Deputy Approval</label>
        <name>Sr_Deputy_Approval</name>
    </approvalStep>
    <description>Judgment Referral</description>
    <emailTemplate>Referral_Email_Templates/RCI_Referral_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>DIR_Case__c.RCI_Judgments__c</field>
            <operation>greaterOrEqual</operation>
            <value>1</value>
        </criteriaItems>
        <criteriaItems>
            <field>Referral__c.RecordType</field>
            <operation>equals</operation>
            <value>RCI Referral to JEU</value>
        </criteriaItems>
        <criteriaItems>
            <field>Referral__c.Type_of_Request__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>DIR_Case__c.RecordType</field>
            <operation>equals</operation>
            <value>RCI</value>
        </criteriaItems>
        <criteriaItems>
            <field>DIR_Case__c.Closed__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>RCI_Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Approval_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Clear_Rejected_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Referral_Approved</name>
            <type>Task</type>
        </action>
        <action>
            <name>RCI_Referral_Status_Request_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>RCI_Approval_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Clear_Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Referral_Rejected</name>
            <type>Task</type>
        </action>
        <action>
            <name>RCI_Referral_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Rejected_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>RCI_Approval_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>RCI Referral to JEU</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>6</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
