<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>System_Administrators</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>RecordType</field>
        <field>Referring_Deputy__c</field>
        <field>Case__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Sr_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Referral__c.Sr_Approver__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>RCI to/from BOFE Sr</label>
        <name>RCI_to_from_BOFE_Sr</name>
    </approvalStep>
    <description>RCI Deputies to send referrals to BOFE using Sr Approver field</description>
    <emailTemplate>Referral_Email_Templates/RCI_Referral_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND (3 OR 4)</booleanFilter>
        <criteriaItems>
            <field>DIR_Case__c.Closed__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Referral__c.RecordType</field>
            <operation>equals</operation>
            <value>Priority Referral to RCI,RCI Referral to BOFE</value>
        </criteriaItems>
        <criteriaItems>
            <field>DIR_Case__c.RecordType</field>
            <operation>equals</operation>
            <value>BOFE Inspection Request,BOFE Intake,BOFE Investigation</value>
        </criteriaItems>
        <criteriaItems>
            <field>DIR_Case__c.RecordType</field>
            <operation>equals</operation>
            <value>RCI</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>RCI_Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Approval_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Clear_Rejected_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Referral_Approved</name>
            <type>Task</type>
        </action>
        <action>
            <name>Referral_Status_Accepted</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>RCI_Approval_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Clear_Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RCI_Referral_Rejected</name>
            <type>Task</type>
        </action>
        <action>
            <name>RCI_Rejected_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Referral_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>RCI Referral to/from BOFE</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>8</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
