        <locationX>768</locationX>
        <locationY>398</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>isCaseTypeOSHA</name>
            <conditionLogic>1 AND (2 OR 3) AND (4 OR 5)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Case_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>OSHA</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Case_Status_in_OIS__c</leftValueReference>
                <operator>IsBlank</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Case_Status_in_OIS__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Case has been deleted from OIS</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Permission.LCO_Senior</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Profile.Id</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>00ed00000013xgX</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Case_Status_in_OIS_to_Case_Needs_to_Be_Created_in_OIS</targetReference>
            </connector>
            <label>isCaseTypeOSHA</label>
        </rules>
        <rules>
            <name>isCaseTypeNotOSHA</name>
            <conditionLogic>1 AND 2 AND (3 OR 4)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Case_Type__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>OSHA</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Case_Status_in_OIS__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Case has been created in OIS</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Permission.LCO_Senior</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Profile.Id</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>00ed00000013xgX</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Case_Status_in_OIS_to_Case_Needs_to_be_deleted_from_OIS</targetReference>
            </connector>
            <label>isCaseTypeNotOSHA</label>
        </rules>
