    <decisions>
        <name>RS_Last_Login</name>
        <label>RS Last Login</label>
        <locationX>773</locationX>
        <locationY>513</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Greater_Than_28_Months</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.LastLoginDate</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>formulaRSUserLastLoginDateCheck</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_User_Login_IsFrozen_Field</targetReference>
            </connector>
            <label>Greater Than 28 Months</label>
        </rules>
    </decisions>
    <decisions>
        <name>User_Last_Login</name>
        <label>User Last Login</label>
        <locationX>995</locationX>
        <locationY>602</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Greater_Than_90</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.LastLoginDate</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>formulaUserLastLoginDateCheck</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_User_Login_IsFrozen_Field</targetReference>
            </connector>
            <label>Greater Than 90</label>
        </rules>
    </decisions>
    <description>This flow will freeze regular user who has not login for 90 days, freeze community registrations user who has not login for 3.5 years, and freeze customer online claim user who has not login for 28 months</description>
    <environments>Default</environments>
    <formulas>
        <description>Customer Online Claim User last login is over 3years 6months (42months * 30days = 1,260 days)</description>
        <name>formulaOCUserLastLoginDateCheck</name>
        <dataType>DateTime</dataType>
        <expression>Now()-1260</expression>
    </formulas>
    <formulas>
        <description>Community Registrations User last login is over 28 months (28 * 30 days = 840)</description>
        <name>formulaRSUserLastLoginDateCheck</name>
        <dataType>DateTime</dataType>
        <expression>Now()-840</expression>
    </formulas>
    <formulas>
        <description>Last Login is &gt;= 90 days</description>
        <name>formulaUserLastLoginDateCheck</name>
        <dataType>DateTime</dataType>
        <expression>Now()-90</expression>
    </formulas>
    <interviewLabel>Freeze User Accounts {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Freeze User Account</label>
