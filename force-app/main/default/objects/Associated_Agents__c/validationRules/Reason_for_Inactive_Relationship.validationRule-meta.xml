<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reason_for_Inactive_Relationship</fullName>
    <active>true</active>
    <errorConditionFormula>AND(Relationship_Status__c = False,  Reason__c  = '')</errorConditionFormula>
    <errorDisplayField>Reason__c</errorDisplayField>
    <errorMessage>Please provide the inactive relationship reason.</errorMessage>
</ValidationRule>
