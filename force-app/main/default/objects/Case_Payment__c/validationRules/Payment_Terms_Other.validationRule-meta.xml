<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Payment_Terms_Other</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
	ISPICKVAL(Payment_Terms__c, 'Other'),
	ISBLANK(Payment_Terms_Other__c)
)</errorConditionFormula>
    <errorMessage>If the value of Payment Terms = Other, then the Payment Terms - Other field cannot be blank.</errorMessage>
</ValidationRule>
