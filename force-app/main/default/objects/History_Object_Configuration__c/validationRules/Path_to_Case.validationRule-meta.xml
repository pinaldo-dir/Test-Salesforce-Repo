<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Path_to_Case</fullName>
    <active>false</active>
    <errorConditionFormula>AND( NOT(ISBLANK(Path_to_Case__c )),  
   NOT(RIGHT( Path_to_Case__c , 8)  = '.case__r')
)</errorConditionFormula>
    <errorMessage>The Path to Case value must end with .case__r</errorMessage>
</ValidationRule>
