<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Required_Other_Reason</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL(Judgment_Party_Type__c, 'Other'),
      ISBLANK(Other_Reason__c))</errorConditionFormula>
    <errorDisplayField>Other_Reason__c</errorDisplayField>
    <errorMessage>Enter other reasons, why party was added to the judgement?</errorMessage>
</ValidationRule>
