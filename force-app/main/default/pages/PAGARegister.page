<!-- controller PAGASearchController.cls -->
<apex:page controller="PAGASearchController" docType="HTML-5.0" applyHtmlTag="false" applyBodyTag="false" sidebar="false" showHeader="false" standardStylesheets="true" title="PAGA Search">
  
    <apex:composition template="PAGATemplate">
        
        <apex:define name="body">
            <apex:form >   
                <br/>
                <h1>Register</h1>
                <p>
                    Please fill out the following fields to create a new account.
                </p>
                <br/>
                <div class="row mb">
                    <div class="form-group col-xs-12 col-sm-4">
                        <label for="">First Name</label>
                    	<input class="form-control" />
                    </div>
                    <div class="form-group col-xs-12 col-sm-4">
                        <label for="">Middle Name</label>
                    	<input class="form-control" />
                    </div>
                    <div class="form-group col-xs-12 col-sm-4">
                        <label for="">Last Name</label>
                    	<input class="form-control" />
                    </div>
                </div>
                <div class="row mb">
                    <div class="form-group col-xs-12 col-sm-4">
                        <label for="">Title</label>
                    	<input class="form-control" />
                    </div>
                    <div class="form-group col-xs-12 col-sm-4">
                        <label for="">Email</label>
                    	<input class="form-control" />
                    </div>
                    <div class="form-group col-xs-12 col-sm-4">
                        <label for="">Phone</label>
                    	<input class="form-control" />
                    </div>
                </div>
                <div class="row mb">
                    <div class="form-group col-xs-12">
                        <label for="">Primary Street Address</label>
                    	<input class="form-control" />
                    </div>
                </div>
                <div class="row mb">
                    <div class="form-group col-xs-12 col-sm-4">
                        <label for="">City</label>
                    	<input class="form-control" />
                    </div>
                    <div class="form-group col-xs-12 col-sm-4">
                        <label for="">State</label>
                    	<input class="form-control" />
                    </div>
                    <div class="form-group col-xs-12 col-sm-4">
                        <label for="">Zip</label>
                    	<input class="form-control" />
                    </div>
                </div>
                
                <div class="panel mb">
                    <div class="panel-body" style="padding:15px;">
                        <div class="row mb">
                            <div class="form-group col-xs-12 col-sm-8">
                                <p>
                                    Are you a full or partial business owner of the business on behalf of which you're registering?
                                </p>
                            </div>
                            <div class="form-group col-xs-12 col-sm-4">
                                <select class="form-control">
                                    <option>Yes</option>
                                    <option>No</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-xs-12 col-sm-8">
                                <p>
                                    How are you affiliated to the business?
                                </p>
                            </div>
                            <div class="form-group col-xs-12 col-sm-4">
                                <select class="form-control">
                                    <option>Accountant</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="row mb">
                    <div class="form-group col-xs-12 col-sm-8">
                        <label>
                            Please create a password
                        </label>
                        <p>
                            <i>Must be 8 characters long and include at least one uppercase, one lowercase, and one character.</i>
                        </p>
                    </div>
                    <div class="form-group col-xs-12 col-sm-4">
                        <input class="form-control" />
                    </div>
                </div>
                <div class="row mb">
                    <div class="form-group col-xs-12 col-sm-8">
                        <label>
                           Confirm your a password
                        </label>
                    </div>
                    <div class="form-group col-xs-12 col-sm-4">
                        <input class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <button class="btn-custom btn-lg">Create Account</button>
                    </div>
                </div>
            </apex:form>
              
        </apex:define>
    </apex:composition>
    
</apex:page>